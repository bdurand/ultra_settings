    --source-value-color: #444444;
    --source-indicator-color: #0d6efd;

    /* Badge colors */
    --secret-badge-bg-color: #dc3545;
    --secret-badge-text-color: #ffffff;
    --static-badge-bg-color: #888888;
    --static-badge-text-color: #ffffff;

    /* Edit link */
    --edit-link-color: #0d6efd;
  }
<% end %>

